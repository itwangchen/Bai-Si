/* pages/BaiSi/Essence/essence.wxss */

@import "../Essence/Template/template.wxss";

.topStyle{
  display: flex;
  flex-direction: row;

  width: 100%;  
  height: 40px;

  background-color: WhiteSmoke;
}
.topUIStyle{
  width: 20%;
  height: 100%;
  text-align: center; 
  position: relative;
}
.topUIStyle:active{
  background-color: lightblue;
}
.topUIStyle .titleStyle{
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  color: gray;  
}
.topUIStyle .titleSelectedStyle{
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  color: red;
}
.topUIStyle .lineStyle{
  width: 100%;
  height: 2px;
  background-color: red;
  position: absolute;
  top: 38px;
}

.bottomStyle{
  width: 100%;
}
.bottomStyle .scrollStyle{
   height: 100%; 
} 