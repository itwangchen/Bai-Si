/* pages/BaiSi/Essence/Template/template.wxss */

.cellStyle{
  display: flex;
  flex-direction: column;
  margin: 10px;
  border: 1rpx solid lightgray;
  background-color: white;
}

.cellTopStyle{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 60px;
  position: relative;
}
.cellTopStyle .topImageStyle{
  width: 40px;
  height: 40px;
  margin: 10px;
}
.cellTopStyle .topTextStyle{
  display: flex;
  flex-direction: column;
  height: 40px;
  margin: 10px 10px 10px 0px;
}
.topTextStyle .topTitleStyle{
  height: 20px;
  color: black;
  font-size: 13px;
}
.topTextStyle .topTimeStyle{
  height: 20px;
  color: lightgray;
  font-size: 11px;
}
.cellTopStyle .topIconStyle{
  width: 25px;
  height: 25px;  
  position: absolute;
  top: 20px;
  right: 10px;
}



.middleStyle{
  display: flex;
  flex-direction: column;
}
.middleStyle .middleItemStyle{
  margin: 0px 10px 10px 10px; 
}
.middleItemStyle text{
  font-size: 13px;
  text-align: left;
}
.middleItemStyle audio{  
  width: 100%;
  overflow: hidden;
}
.middleItemStyle video{
  width: 100%;
}
.middleItemStyle image{
  width: 100%;
}



.bottomBtnStyle{
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid lightgray;
  height: 40px;
}
.bottomBtnStyle .bottomBtnItemStyle{
  width: 25%;
  height: 100%; 
  display: flex;
  flex-direction: row;
}
.bottomBtnItemStyle:active{
  background-color: lightblue;
}
.bottomBtnItemStyle image{
  width: 20px;
  height: 20px; 
  margin: 10px 10px 10px 20%;
}
.bottomBtnItemStyle text{
  height: 40px;
  line-height: 40px;
  font-size: 11px;
  color: lightgray;
}





.detailCellStyle{
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid lightgrey;
  background-color: white;
}
.detailCellStyle .topStyle{
  display: flex;
  flex-direction: row;
  position: relative;
}
.topStyle .topImageStyle{
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin: 10px;
}
.topStyle .topNameStyle{
  height: 30px;
  line-height: 30px;
  margin: 10px 10px 10px 0px;
  font-size: 13px;
  color: CornflowerBlue;
}
.topStyle .topPraiseTextStyle{
  height: 30px;
  line-height: 30px;
  font-size: 10px;
  color: lightgray;
  position: absolute;
  top: 10px;
  right: 35px;
}
.topStyle .topPraiseIconStyle{
  width: 20px;
  height: 20px;
  position: absolute;
  top: 15px;
  right: 10px;
}
.detailCellStyle .bottomTextStyle{
  margin: 0px 10px 10px 10px;
  font-size: 13px;
  color: black;
}